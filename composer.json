{
	"name": "php-ug/web",
	"description": "The Web-interface of php.ug",
    "require": {
		"php": "^8.4",
		"ext-mbstring": "*",
        "slim/slim": "^4.14",
        "twig/twig": "^3.21",
		"league/container": "^5.1",
		"slim/psr7": "^1.7",
		"slim/twig-view": "^3.4",
		"phpmailer/phpmailer": "^6.10"
    },
	"replace": {
		"symfony/polyfill-mbstring": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*",
		"symfony/polyfill-php82": "*",
		"symfony/polyfill-php83": "*",
		"symfony/polyfill-php84": "*"
	},
	"autoload": {
		"psr-4": {
			"Phpug\\Web\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Phpug\\WebTest\\": "tests"
		}
	}
}
